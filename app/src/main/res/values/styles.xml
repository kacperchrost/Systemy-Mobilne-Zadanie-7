<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/darkerPink</item>
        <item name="colorPrimaryDark">@color/darkPink</item>
        <item name="colorAccent">@color/lightPink</item>
    </style>
    <style name="TextField">
        <item name="android:background">@color/background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/task_name_padding</item>
        <item name="android:textColor">@color/taskNameColor</item>
        <item name="android:textAlignment">gravity</item>
    </style>

</resources>